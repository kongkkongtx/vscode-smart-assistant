{
  "name": "vscode-smart-assistant",
  "displayName": "VS Code智能助手",
  "description": "基于React框架的VS Code插件，集成DeepSeek AI模型，提供智能对话功能",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=16.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:smartAssistant.openChatPanel"
  ],
  "main": "./out/extension.js",
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "contributes": {
    "commands": [
      {
        "command": "smartAssistant.openChatPanel",
        "title": "打开智能助手聊天面板"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "smartAssistant.openChatPanel",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "智能助手配置",
      "properties": {
        "smartAssistant.deepseekToken": {
          "type": "string",
          "default": "",
          "description": "DeepSeek API Token"
        },
        "smartAssistant.openaiToken": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Token"
        },
        "smartAssistant.claudeToken": {
          "type": "string",
          "default": "",
          "description": "Anthropic Claude API Token"
        },
        "smartAssistant.kimiToken": {
          "type": "string",
          "default": "",
          "description": "Kimi API Token"
        },
        "smartAssistant.openrouterToken": {
          "type": "string",
          "default": "",
          "description": "OpenRouter API Token"
        },
        "smartAssistant.selectedModel": {
          "type": "string",
          "enum": [
            "deepseek-chat",
            "deepseek-reasoner",
            "gpt-4o",
            "gpt-4-turbo",
            "claude-3-sonnet",
            "claude-3-opus",
            "kimi",
            "openrouter-model"
          ],
          "default": "deepseek-chat",
          "description": "当前使用的AI模型"
        },
        "smartAssistant.openrouterModel": {
          "type": "string",
          "default": "openrouter/auto",
          "description": "OpenRouter 模型名称"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "build": "npm run compile && npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=./out/extension.js --external:vscode --format=cjs --platform=node",
    "build-webview": "webpack --mode production",
    "build-webview-dev": "webpack --mode development"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.1",
    "esbuild": "^0.17.19",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "html-webpack-plugin": "^5.6.5",
    "mocha": "^10.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "highlight.js": "^11.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3"
  }
}
